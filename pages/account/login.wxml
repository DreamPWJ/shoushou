<!--pages/account/login.wxml-->
<form bindsubmit="loginSubmit">
    <view class="list card margin-top">

        <view class="header row row-horizontal-around row-no-padding">
            <view class="col-35 header-tab {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">
                账号密码登录
            </view>
            <text class="border-r"></text>
            <view class="col-35 header-tab {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">
                手机验证登录
            </view>
        </view>


        <!-- 账号密码登录 -->
        <view wx:if="{{currentTab==0}}">
            <view class="item item-input">
                <text class=" iconfont icon-my placeholder-icon"></text>
                <input type="number" bindchange="bindChange" id="account" name="account" placeholder="手机号码" focus="true"/>
            </view>

            <view class="item item-input">
                <text class=" iconfont  icon-lock placeholder-icon"></text>
                <input type="text" bindchange="bindChange" password="true" id="password" name="password"
                       placeholder="密码"/>
            </view>
        </view>

        <!-- 手机验证登录 -->
        <view wx:if="{{currentTab==1}}">
            <view class="item item-input">
                <text class=" iconfont icon-my placeholder-icon"></text>
                <input type="number" bindchange="bindChange" name="user" placeholder="手机号码" focus="true"/>
            </view>

            <view class="item item-input">
                <text class=" iconfont  icon-unlock placeholder-icon"></text>
                <input type="number" bindchange="bindChange" name="password" placeholder="验证码"/>
                <button class="positive-bg light verify-code col-30 button-small" hover-class="button-hover">获取验证码</button>
            </view>
        </view>


    </view>

    <view class="padding-horizontal">
        <button formType="submit" hover-class="button-hover" class="positive-bg light ">登录</button>
    </view>
    <view class="row row-horizontal-center  margin-top" >
        <navigator url="register" open-type="navigate" hover-class="none" class="col-30 positive text-right padding-right  border-r">注册收收
        </navigator>
        <navigator url="register" open-type="navigate" hover-class="none" class="col-30 padding-left">忘记密码
        </navigator>
    </view>
</form>

