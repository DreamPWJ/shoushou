/* pages/index/information.wxss */

.select-category {
    height: 9.6rem;
}

.select-category label {
    position: relative;
    display: inline-block;
    margin-bottom: 0.3rem;
    width: 90% !important;
    height: 4rem;
    box-sizing: border-box;
}

.select-category .iconfont {
    font-size: 1.8rem !important;
    color: #585858;
}

.select-category label .show-span::before {
    content: '已选';
    position: absolute;
    color: #fff !important;
    font-size: 9px;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    right: 0;
    top: 4px;
    z-index: 2000;
}

.select-category label .show-span::after {
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    border-top: 1.6rem solid #00ACFF;
    border-left: 1.6rem solid transparent;
    right: 0;
    top: 0;
}

.show-span {
    opacity: 1;
}

.color-p {
    color: #00ACFF !important;
}

.border-label {
    position: relative;
    width: 90%;
    height: 90%;

}

.border-label-checked {
    border: 1px solid #00ACFF;
}



.icon-locationfill {
    font-size: 1.5rem;
}

.radio-label {
    position: relative;
    width: 90%;
    height: 90%;
    padding: 2px;
    margin:0.3rem auto 0;
}

.radio-group label .show-span::before {
    content: '\2713';
    position: absolute;
    color: #fff !important;
    font-size: 10px;
    right: 0.1rem;
    bottom: -0.1rem;
    z-index: 2000;
}

.radio-group label .show-span::after {
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    border-bottom: 1.2rem solid #00ACFF;
    border-left: 1.2rem solid transparent;
    right: 0;
    bottom: 0;
}

.radio-group image{
    height: 2.2rem;
}