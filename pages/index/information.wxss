.select-category label {
    position: relative;
    display: inline-block;
    margin-bottom: 0.3rem;
    width: 90%;
    height: 4rem;
}

.select-category .iconfont{
    font-size: 1.8rem !important;
    color: #585858;
}

.select-category label .span {
    opacity: 0;
    color: #fff !important;
}

.select-category label .span:before {
    content: '已选';
    position: absolute;
    color: #fff !important;
    font-size: 9px;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    right: 0;
    top: 4px;
    z-index: 2000;
}

.select-category label .span:after {
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    border-top: 1.6rem solid #00ACFF;
    border-left: 1.6rem solid transparent;
    right: 0;
    top: 0;
}


