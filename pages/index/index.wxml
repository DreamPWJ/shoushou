<include src="../util/tooltip.wxml"/>
<view id="index">
    <view class="new-topbj">
        <swiper indicator-dots="{{indicatorDots}}"
                autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
            <block wx:for="{{imgUrls}}" wx:for-item="item" wx:key="*this">
                <swiper-item>
                    <image src="{{item}}" class="slide-image full-image"/>
                </swiper-item>
            </block>
        </swiper>
        <view class="sub-total card light text-center">
            <view class="row row-center  row-no-padding ">
                <view class="col">
                    <view class="p">{{cargoQuantity?cargoQuantity.informatenum :0}}</view>
                    <view class="p">信息总量(单)</view>
                </view>
                <view class="total col">
                    <view class="p num">{{cargoQuantity.num||0}}</view>
                    <view class="p">总回收量(台)</view>
                </view>
                <view class="col">
                    <view class="p">{{cargoQuantity?cargoQuantity.goodsnum:0 }}</view>
                    <view class="p">总货源量(单)</view>
                </view>
            </view>
        </view>
    </view>
