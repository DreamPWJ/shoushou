/**index.wxss**/
#index {
    width: 100%;
    overflow: hidden;
}

.new-topbj {
    background-color: #00A0FE;
    background-size: cover;
    padding-bottom: 0.8rem;
}

.slide-image {
    /*   height: 10rem;*/
}

.new-topbj .sub-total {
    position: relative;
    margin-top: -0.3rem;
    background: -webkit-linear-gradient(to bottom, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.2));
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.2));
    background-color: rgba(255, 255, 255, 0.1) !important;
    background-size: cover;
    padding: 10px 5px;
    z-index: 20000;
}

.new-topbj .total {
    border-left: 1px solid rgba(255, 255, 255, 0.3);
    border-right: 1px solid rgba(255, 255, 255, 0.3);
}

.new-topbj .total .num {
    font-size: 1.4rem !important;
}

.new-topbj .sub-total .p:first-child {
    height: 1.8rem;
    line-height: 1.8rem;
    font-size: 1.2rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.new-topbj .sub-total .p:last-child {
    font-size: 0.8rem !important;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

