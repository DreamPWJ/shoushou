.main.card {
    margin-top: -1rem;
}

.sub-main.card {
    margin-top: -0.5rem;
}

.main-list {
    text-align: center;
}

.main-list navigator, .main-list button {
    padding: 1rem 0.2rem;
}

.main-list navigator .h5, .main-list button .h5 {
    margin: 0.3rem;
    font-size: 15px !important;
}

.main-list navigator .p, .main-list button .p {
    margin-top: 0.2rem;
    font-size: 0.7rem !important;
    color: #888888;
}

.main-list navigator .iconfont, .main-list button .iconfont {
    font-size: 2.2rem !important;
}

.main-list button {
    background-color: #fff !important;
    line-height: normal !important;
}

.sub-menu navigator {
    text-align: center;
    color: #585858;
}

.sub-menu .h5 {
    font-size: 15px !important;
}

.sub-menu navigator .iconfont {
    vertical-align: middle;
    font-size: 1.2rem;
    margin-right: 0.2rem;
}

